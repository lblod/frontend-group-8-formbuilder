{{#if @readOnly}}
  <h1 class="au-u-h3">
    {{this.title}}
  </h1>
{{else}}
  {{#if this.active}}
    <form {{on "submit" this.submit}} {{on "focusout" this.cancel}}>
      <div
        class="au-c-app-chrome__title-group au-u-flex au-u-flex--spaced-tiny"
      >
        {{#let (unique-id) as |id|}}
          <AuLabel for={{id}} class="au-u-hidden-visually">{{t
              "reglementaire-bijlage-titel.description"
            }}</AuLabel>
          <input
            class="au-c-input au-c-app-chrome__title-input
              {{if this.error "au-c-input--error"}}"
            placeholder={{t "reglementaire-bijlage-titel.placeholder"}}
            id={{id}}
            type="text"
            value={{this.title}}
            {{on "input" this.setTitle}}
            {{did-insert this.focus}}
          />
        {{/let}}
        <AuButton
          type="submit"
          @skin="secondary"
          @icon="check"
          @hideText={{true}}
        >{{t "reglementaire-bijlage-titel.modify"}}</AuButton>
      </div>
    </form>
  {{else}}
    <h1 class="au-u-h3">
      {{this.title}}
      <AuButton
        {{on "click" this.toggleActive}}
        @icon="pencil"
        @skin="tertiary"
        @hideText={{true}}
      >{{t "reglementaire-bijlage-titel.modify"}}</AuButton>
    </h1>
  {{/if}}

{{/if}}
